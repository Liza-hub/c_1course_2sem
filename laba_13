#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include <string.h>


int main()
{
	setlocale(0, "russian");
	char* s, * st, * ptr1, * ptr, * ptr2;
	char ch[12];
	int dls = 0;
	st = new char[120];
	puts("Введите текст, состоящий из слов, разделенных одним пробелом:");
	gets_s(st, 120);
	s = new char[strlen(st) + 1];
	strcpy(s, st);
	delete[] st;
	ptr = s;
	ptr1 = strchr(ptr, ' ');
	while (ptr1!= NULL)
	{
		printf("%p\n", ptr);
		dls = ptr1 - ptr;
		strncpy(ch, ptr, dls);
		ch[dls] = '\0';
		puts(ch);
		ptr = ptr + dls + 1;
		ptr1 = strchr(ptr, ' ');
	}
	printf("%p\n", ptr);
	puts(ptr);
	return 0;
}
